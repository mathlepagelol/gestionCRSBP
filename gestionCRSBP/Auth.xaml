        <Label Content="Nom d'utilisateur" HorizontalAlignment="Left" Margin="343,283,0,0" VerticalAlignment="Top"/>
        <Label Content="Mot de passe" HorizontalAlignment="Left" Margin="343,352,0,0" VerticalAlignment="Top" />
